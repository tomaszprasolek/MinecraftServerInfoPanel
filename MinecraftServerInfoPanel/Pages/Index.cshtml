@page
@model IndexModel
@{
    ViewData["Title"] = "Minecraft Server Info Panel";
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    <button type="submit" class="btn btn-success">
        <i class="fas fa-cloud-download-alt"></i> Ściągnij dane z serwera
    </button>
</form>

<br />

<table id="consoleData" class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Informacja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Date</td>
                <td>@log.Information</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#consoleData').DataTable({
                "order": [[0, "desc"]],
                "pageLength": 25,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Polish.json"
                }
            });
        });
    </script>
}
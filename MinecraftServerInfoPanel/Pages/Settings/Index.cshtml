@page
@model Settings.SettingsModel
@{
    ViewData["Title"] = "Ustawienia";
}

<h3>Ustawienia aplikacji</h3>

<hr />
<h4>Emaile</h4>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<p>Emaila, na które są wysyłane powiadomienia o aktywności na serwerze:</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Adres email</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var email in Model.Emails)
        {
            <tr>
                <td>@email.EmailAddress</td>
                <td>
                    <a asp-page="DeleteEmail" asp-route-id="@email.Id" class="btn btn-danger btnDeleteEmail">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="AddEmail" class="btn btn-primary">Dodaj adres e-mail</a>
<br /><br />
<form method="post" asp-page="SendTestEmail">
    <input type="submit" value="Wyślij emaila testowego" class="btn btn-info" />
</form>
@page
@model MinecraftServerInfoPanel.Pages.Settings.AddEmailModel
@{
    ViewData["Title"] = "Dodawanie adresu email";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h4>Dodawanie adresu email</h4>
        <form method="post">
            <div class="form-group">
                <label asp-for="NewEmail"></label>
                <input asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
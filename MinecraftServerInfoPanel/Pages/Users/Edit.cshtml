@page
@model MinecraftServerInfoPanel.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edycja użytkownika";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h5>@Model.ViewModel.Name</h5>
        <form method="post">
            <input type="hidden" asp-for="ViewModel.Id" />
            <div class="form-group">
                <label asp-for="ViewModel.Description"></label>
                <input asp-for="ViewModel.Description" class="form-control" />
                <span asp-validation-for="ViewModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>